[main]
cl_template_location = calculate,cldt-overlay,local
cl_template_path = /var/db/repos/cldt-overlay/profiles/templates,/var/calculate/templates
[update]
cl_update_rep_name = gentoo,calculate,cldt-overlay
cl_update_rep_url = https://github.com/calculatelinux/gentoo,https://github.com/calculatelinux/calculate,https://github.com/vmtlw/cldt-overlay
cl_update_rep_list =
	GitHub: https://github.com/calculatelinux/gentoo,https://github.com/calculatelinux/calculate,https://github.com/vmtlw/cldt-overlay

cl_autoupdate_set = off
cl_verbose_set = off
os_linux_shortname = calculate
os_linux_name = Calculate Linux Home

[install]
cl_autopartition_bios_grub_size = 10485760
cl_autopartition_boot_size = 536870912
cl_autopartition_root_size_default = 21474836480
cl_autopartition_root_size_min = 7516192768
cl_autopartition_table = gpt
cl_distfiles_path = /var/calculate/distfiles
cl_install_autoupdate_set = off
cl_install_fs = btrfs,ext4,ext3
cl_uuid_set = on
os_install_btrfs_compression = zstd
os_install_ntp = ntp0.zenon.net
